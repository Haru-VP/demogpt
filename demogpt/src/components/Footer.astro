---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import LogoSvg from '../icons/Corazon.svg';
---

<footer class="w-full bg-gradient-to-r from-gray-100 via-white to-gray-100 border-t border-gray-300">
  <div class="max-w-[1392px] mx-auto px-6 py-8 grid grid-cols-1 md:grid-cols-2 gap-6 items-center">
    
    <!-- Logo + Info -->
    <div class="flex items-center gap-4">
      <LogoSvg class="w-14 h-14 drop-shadow-md" />
      <div>
        <p class="font-semibold text-xl sm:text-2xl flex flex-wrap items-center gap-2">
          Made with Astro
          <span class="rounded bg-pink-500 text-white text-lg px-2 py-0.5">2025</span>
        </p>
        <span class="uppercase font-light text-gray-600 text-sm sm:text-base">
          © Valentina Pinto —  
          <a
            href="https://github.com/Haru-VP"
            target="_blank"
            rel="noopener noreferrer"
            class="text-pink-600 font-medium hover:underline hover:text-pink-700 transition"
          >
            GitHub
          </a>
        </span>
      </div>
    </div>

    <!-- Autor -->
    <div class="text-center md:text-right">
      <h5 class="text-gray-800 text-lg sm:text-2xl font-bold uppercase">
        Creado por
        <span class="ml-2 text-pink-600">Valentina Pinto</span>
      </h5>
    </div>
  </div>
</footer>
