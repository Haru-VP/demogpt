---
import LogoSvg from '../icons/Corazon.svg';
---

<header class="w-full bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 shadow-lg">
  <div class="max-w-[1392px] mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Logo + Título -->
    <div class="flex items-center gap-3">
      <LogoSvg class="w-12 h-12 drop-shadow-lg" />
      <h1 class="text-white text-2xl sm:text-3xl font-bold tracking-wide">
         Mi Perfil en Astro
      </h1>
    </div>

    <!-- Navegación Desktop -->
    <nav class="hidden md:flex gap-6 text-lg font-medium text-white">
      <a href="#inicio" class="hover:text-yellow-200 transition">Inicio</a>
      <a href="#about" class="hover:text-yellow-200 transition">Sobre mí</a>
      <a href="#projects" class="hover:text-yellow-200 transition">Proyectos</a>
      <a href="#contact" class="hover:text-yellow-200 transition">Contacto</a>
    </nav>

    <!-- Botón especial (desktop) -->
    <div class="hidden md:block">
      <a
        href="#contact"
        class="bg-white text-pink-600 px-4 py-2 rounded-xl font-semibold shadow hover:bg-yellow-100 transition"
      >
        Hablemos
      </a>
    </div>

    <!-- Botón hamburguesa (mobile) -->
    <button 
      id="menu-btn"
      class="md:hidden text-white focus:outline-none"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none"
           viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Menú móvil desplegable -->
  <div id="mobile-menu" class="hidden md:hidden bg-pink-600 text-white px-6 py-4 space-y-3">
    <a href="#inicio" class="block hover:text-yellow-200">Inicio</a>
    <a href="#about" class="block hover:text-yellow-200">Sobre mí</a>
    <a href="#projects" class="block hover:text-yellow-200">Proyectos</a>
    <a href="#contact" class="block hover:text-yellow-200">Contacto</a>
    <a
      href="#contact"
      class="block bg-white text-pink-600 px-4 py-2 rounded-xl font-semibold shadow hover:bg-yellow-100 transition text-center"
    >
      Hablemos
    </a>
  </div>
</header>

<!-- Script que hace funcionar el botón -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("menu-btn");
    const menu = document.getElementById("mobile-menu");

    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  });
</script>
